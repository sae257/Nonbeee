<div class="container">
  <div class="row">
    <div class="col-9 mx-auto">
      <h4><strong>マイページ</strong></h4>
    </div>
  </div>
  <div class="row">
    <div class="col-9 px-0 mt-3 mx-auto">
      <div class="col-6">
        <h5 class="font-weight-bold mb-3">
          登録情報
          <%= link_to '編集する', edit_bar_bar_path, class: "btn btn-success ml-5" %>
        </h5>
      </div>
      <table class="table table-bordered shadow-lg">
        <tr>
          <th class="table-active">店名</th><td><%= @bar.bar_name %></td>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th><td><%= @bar.post_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th><td><%= @bar.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th><td><%= @bar.bar_tel %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th><td><%= @bar.email %></td>
        </tr>
        </table>
      </div>
    </div>
  </div>
</div>