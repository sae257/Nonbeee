<div class="container">
  <div class="row">
    <div class="col3-md offset-1 mt-5 mb-5">
      <h4><strong><%= "#{@user.name_first}#{@user.name_second}" %>さんの会員詳細</strong></h4>
    </div>
  </div>

   <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table shadow-lg">
        <tr>
          <th class="table-active">会員ID</th>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <th class="table-active">氏名</th>
          <td><%= "#{@user.name_first}"" ""#{@user.name_second}" %></td>
        </tr>

        <tr>
          <th class="table-active">フリガナ</th>
          <td><%= "#{@user.name_firdt_rubi}"" ""#{@user.name_second_rubi}" %></td>
        </tr>

        <tr>
          <th class="table-active">電話番号</th>
          <td><%= @user.tel %></td>
        </tr>

        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <th class="table-active">会員ステータス</th>
          <% if @user.is_deleted == true %>
            <td class="text-secondary font-weight-bold">退会</td>
          <% else %>
            <td class="text-success font-weight-bold">有効</td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>

  <div class="row justify-content-center">
    <p class="text-center">
      <%= link_to "編集する", edit_admin_user_path(@user.id), class: 'btn btn-success m-3' %>
      <%= link_to "コメンtp一覧を見る", root_path, class: 'btn btn-primary m-3' %>
      <%= link_to "コメンtp一覧を見る", root_path, class: 'btn btn-primary m-3' %>
    </p>
  </div>
</div>
